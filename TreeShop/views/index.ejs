<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tree Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .header {
            background-color: #5a7d5a;
            padding: 10px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        img {
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <header class="header">
        <h1>Tree Shop</h1>
        <a href="/about" class="btn btn-outline-light">About me</a>
    </header>

    <div class="container mt-4">
        <h2 class="text-center">Tree Shop</h2>
        <form id="treeForm" class="form">
            <input type="hidden" id="editMode" value=""> <!-- ·∫®n ID khi s·ª≠a -->

            <div class="mb-3">
                <label class="form-label">Tree Name</label>
                <input type="text" id="treeName" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea id="treeDescription" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Image</label>
                <input type="file" id="treeImage" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">Add</button>
            <button type="button" class="btn btn-danger" id="resetBtn">Reset</button>
        </form>

        <table class="table mt-4">
            <thead class="table-success">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="treeList">
                <!-- D·ªØ li·ªáu s·∫Ω ƒë∆∞·ª£c render ·ªü ƒë√¢y -->
            </tbody>
        </table>
    </div>

    <script>
        let trees = []; // M·∫£ng l∆∞u danh s√°ch c√¢y

        document.getElementById("treeForm").addEventListener("submit", function (event) {
            event.preventDefault();

            let id = document.getElementById("editMode").value;
            let name = document.getElementById("treeName").value;
            let description = document.getElementById("treeDescription").value;
            let image = document.getElementById("treeImage").files[0] ? URL.createObjectURL(document.getElementById("treeImage").files[0]) : "";

            if (id) {
                // Ch·ªânh s·ª≠a c√¢y
                trees[id - 1] = { id, name, description, image };
                document.getElementById("editMode").value = "";
            } else {
                // Th√™m m·ªõi c√¢y
                trees.push({ id: trees.length + 1, name, description, image });
            }

            renderTreeList();
            this.reset();
        });

        function renderTreeList() {
            let tableBody = document.getElementById("treeList");
            tableBody.innerHTML = "";

            trees.forEach((tree, index) => {
                let row = `
                    <tr>
                        <td>${tree.id}</td>
                        <td class="tree-name">${tree.name}</td>
                        <td><img src="${tree.image}" width="50"></td>
                        <td class="tree-description">${tree.description}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary btn-edit" data-id="${index}">‚úè</button>
                            <button class="btn btn-sm btn-outline-danger btn-delete" data-id="${index}">üóë</button>
                        </td>
                    </tr>
                `;
                tableBody.innerHTML += row;
            });

            attachEventListeners();
        }

        function attachEventListeners() {
            document.querySelectorAll(".btn-edit").forEach(button => {
                button.addEventListener("click", function () {
                    let index = this.getAttribute("data-id");
                    let tree = trees[index];

                    document.getElementById("treeName").value = tree.name;
                    document.getElementById("treeDescription").value = tree.description;
                    document.getElementById("editMode").value = tree.id;
                });
            });

            document.querySelectorAll(".btn-delete").forEach(button => {
                button.addEventListener("click", function () {
                    let index = this.getAttribute("data-id");
                    if (confirm("B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a c√¢y n√†y kh√¥ng?")) {
                        trees.splice(index, 1);
                        renderTreeList();
                    }
                });
            });
        }

        document.getElementById("resetBtn").addEventListener("click", function () {
            document.getElementById("treeForm").reset();
            document.getElementById("editMode").value = "";
        });

    </script>
</body>

</html>
